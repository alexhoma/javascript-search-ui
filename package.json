{
  "name": "apisearch-ui",
  "version": "0.3.8",
  "description": "Javascript User Interface of Apisearch.",
  "main": "lib/index.js",
  "scripts": {
    "dev": "webpack --config ./webpack.dev.js --progress --colors --watch",
    "build:lib": "tsc --outDir lib -m commonjs",
    "build:dev": "webpack",
    "build:dev-ie": "BROWSERSLIST_ENV=ie webpack --env ie",
    "build:min": "webpack --env production",
    "build:min-ie": "BROWSERSLIST_ENV=ie webpack --env ie --env production",

    "size": "bundlesize",
    "webpack": "webpack",
    "fix": "tslint -c tslint.json --fix 'src/**/*.ts' 'src/*.ts'",
    "test:unit": "mocha --timeout 10000 --recursive --require ts-node/register test/**/*.tsx test/**/**/*.tsx",
    "dist": "rm -rf ./dist/*; npm run test:unit; npm run build:lib && npm run build:dev && npm run build:dev-ie && npm run build:min && npm run build:min-ie"
  },
  "license": "MIT",
  "author": "Apisearch Team <hello@apisearch.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/apisearch-io/search-ui.git"
  },
  "bugs": {
    "url": "https://github.com/apisearch-io/search-ui/issues"
  },
  "homepage": "https://github.com/apisearch-io/search-ui",
  "keywords": [
    "es6",
    "search-engine",
    "apisearch",
    "search-out-of-the-box",
    "facetted-search",
    "user-interface"
  ],
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.4",
    "babel-loader": "^8.2.3",
    "babel-preset-preact": "^2.0.0",
    "bundlesize": "^0.18.1",
    "chai": "^4.2.0",
    "core-js": "^3.19.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "jsdom": "11.12.0",
    "jsdom-global": "3.0.2",
    "mocha": "^9.1.3",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.26.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^7.0.1",
    "tslint": "^5.14.0",
    "typescript": "^4.4.4",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "apisearch": "^0.3.7",
    "mustache": "^4.1.0",
    "preact": "^10"
  },
  "bundlesize": [
    {
      "path": "./dist/apisearch-ui.js"
    },
    {
      "path": "./dist/apisearch-ui.min.js"
    },
    {
      "path": "./dist/apisearch-ui.ie.js"
    },
    {
      "path": "./dist/apisearch-ui.ie.min.js"
    }
  ]
}
